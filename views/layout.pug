doctype html
html
    head
        title Umuzi Movie Store
        link(rel='stylesheet', href='/css/style.css')
        link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js')
    body
        nav.navbar.navbar-expand-md.bg-dark.navbar-dark
            a.navbar-brand(href='/') Umuzi Movie Store
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#collapsibleNavbar')
                span.navbar-toggler-icon
            #collapsibleNavbar.collapse.navbar-collapse
                ul.navbar-nav
                    li.nav-item
                        a.nav-link(href='/') Home
                    li.nav-item
                        a.nav-link(href='/movies/add') Add Movies
                    li.nav-item
                        a.nav-link(href='/') Register
                    li.nav-item
                        a.nav-link(href='/') Login
        .container
            .col-sm-12
                != messages('message', locals)
                if errors
                    each error, i in errors
                        div(class='alert alert-danger') #{error.msg}
            
                block content
                br
                hr
        footer
            p Copyright &copy;2019. Designed by  
                a(href='https://tembisa-khupiso.github.io/tkportfolio/tkportfolio/home.html') Tembisa Khupiso.
        script(src='/js/main.js')
        script(src='/bower_components/jquery/dist/jquery.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')